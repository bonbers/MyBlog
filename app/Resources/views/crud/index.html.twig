{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cruds list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Author</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for crud in cruds %}
            <tr>
                <td><a href="{{ path('crud_show', { 'id': crud.id }) }}">{{ crud.id }}</a></td>
                <td>{{ crud.title }}</td>
                <td>{{ crud.description }}</td>
                <td>{{ crud.author }}</td>
                <td>{% if crud.date %}{{ crud.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('crud_show', { 'id': crud.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('crud_edit', { 'id': crud.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('crud_new') }}">Create a new crud</a>
        </li>
    </ul>
{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
    <h1>Crud</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ crud.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ crud.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ crud.description }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ crud.author }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if crud.date %}{{ crud.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('crud_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('crud_edit', { 'id': crud.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
